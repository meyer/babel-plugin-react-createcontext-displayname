{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015"],

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "outDir": "./lib",
    "rootDir": "./src",

    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true
  }
}
